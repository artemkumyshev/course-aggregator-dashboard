{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@assets": ["./assets"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@layout": ["./layout"],
      "@layout/*": ["./layout/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@store": ["./store"],
      "@store/*": ["./store/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@routes": ["./utils/routes"],
      "@routes/*": ["./utils/routes/*"],
    },
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
